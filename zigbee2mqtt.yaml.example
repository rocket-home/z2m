# Minimal Zigbee2MQTT config template (copy to zigbee2mqtt.yaml for local use)
homeassistant: false

permit_join: true

mqtt:
  base_topic: zigbee2mqtt
  server: "mqtt://mqtt:1883"

serial:
  # В контейнере по умолчанию есть стабильное имя /dev/zigbee (см. docker-compose.yml)
  port: /dev/zigbee

# Frontend (web interface)
frontend:
  port: 4000
  host: 0.0.0.0

advanced:
  log_level: warn
  log_namespaced_levels:
    z2m:mqtt: warning



